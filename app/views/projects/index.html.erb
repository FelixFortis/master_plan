<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Due date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.due_date %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', user_project_path(@user, project) %></td>
        <td><%= link_to 'Edit', edit_user_project_path(@user, project) %></td>
        <td><%= link_to 'Delete', [@user, project], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_user_project_path %>
